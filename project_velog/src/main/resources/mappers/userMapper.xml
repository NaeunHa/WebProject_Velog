<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.velog.domain.user.UserRepository">
  	<select id="userEmailCheck" parameterType="com.velog.web.model.dto.UserDto" resultType="Integer">
		select
			count(email)  		
		from
			user_mst
		where
			email = #{email};
  	</select>
  	
  	<update id="updateFrontName" parameterType="com.velog.domain.user.Mypage">
		update
		   user_mst
		set
		   user_name = #{user_name}
		where
			id = #{id};
    </update>
    
    <update id="updateFrontContent" parameterType="com.velog.domain.user.Mypage">
		update
		   user_info
		set
		   content = #{content}
		where
			id = #{id};
    </update>
  	

  </mapper>
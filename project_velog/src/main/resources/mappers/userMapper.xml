<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.velog.mapper.UserRepository">
  	<select id="userEmailCheck" parameterType="com.velog.web.model.dto.UserDto" resultType="Integer">
		select
			count(email)  		
		from
			user_mst
		where
			email = #{email};
  	</select>
  	<insert id="signup" parameterType="com.velog.web.model.dto.UserDto">
  		insert into
  			user_mst
  		values(
  			0,
  			#{email},
  			#{username},
  			#{name},
  			#{comment},
  			#{password},
  			#{provider},
  			now(),
  			now()
  		)
  	</insert>
  	<select id="getUser" resultType="com.velog.web.model.dto.UserDto">
  		select
  			*
  		from
  			user_mst
  		where
  			username = #{username}
  	</select>
  </mapper>